---
import { getBlogCollection } from 'astro-pure/server'
import PageLayout from '@/layouts/BaseLayout.astro'
import PostPreview from '@/components/PostPreview.astro'
import { groupCollectionsByTop, sortPostsByTop } from '@/utils/post-utils'

export const prerender = true

const allPosts = await getBlogCollection('posts')
const allPostsByTop = sortPostsByTop(allPosts)
const postsByTopGroups = groupCollectionsByTop(allPostsByTop)

const meta = {
  description: '按置顶级别列出所有帖子',
  title: '置顶级别'
}
---

<PageLayout {meta}>
  <main class='mt-6 lg:mt-10'>
    <div id='content-header' class='animate'>
      <h1 class='mb-6 text-3xl font-medium'>按置顶级别列出所有帖子</h1>
    </div>

    {allPosts.length === 0 && <p>还没有帖子。</p>}

    <section id='content' class='animate' aria-label='Post list'>
      {
        postsByTopGroups.map(([top, posts]) => (
          <div class='relative mt-20'>
            <h2
              class='absolute -start-6 -top-16 z-0 text-9xl font-bold text-transparent opacity-10'
              style='-webkit-text-stroke-width:2px;-webkit-text-stroke-color:hsl(var(--foreground)/var(--un-text-opacity))'
            >
              <samp>{top}</samp>
            </h2>
            <p class='px-5 text-muted-foreground'>
              【🔝{top}】共 {posts.length} 帖子：
            </p>
            <ul class='flex flex-col text-start'>
              {posts.map((p) => (
                <PostPreview post={p} class='border-0 bg-transparent py-2' />
              ))}
            </ul>
          </div>
        ))
      }
    </section>
  </main>
</PageLayout>
